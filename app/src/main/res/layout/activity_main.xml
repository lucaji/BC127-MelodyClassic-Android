<?xml version="1.0" encoding="utf-8"?>
<android.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/theGrid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:columnCount="5">

    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:clickable="true"
        android:contentDescription="BlueCreation Icon"
        android:focusable="true"
        android:onClick="imageButtonOnClick"
        android:src="@drawable/blue_creation_icon"
        android:layout_column="3"
        android:layout_gravity="right"
        android:layout_row="0"
        android:layout_rowSpan="4" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BlueCreation"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="left"
        android:layout_row="1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Melody Android"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="left"
        android:layout_row="2" />

    <TextView
        android:id="@+id/ConnectedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Connected"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="center_horizontal"
        android:layout_row="5" />

    <android.widget.Space
        android:layout_width="1dp"
        android:layout_height="21dp"
        android:layout_column="0"
        android:layout_row="0" />

    <android.widget.Space
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_column="0"
        android:layout_row="3" />

    <android.widget.Space
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_column="0"
        android:layout_row="2" />

    <android.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:columnCount="3"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_gravity="left"
        android:layout_row="4">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data to Send"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="1" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Received"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_column="1"
            android:layout_gravity="left|bottom"
            android:layout_row="2" />

        <EditText
            android:id="@+id/edit_text_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:lines="1"
            android:maxLines="1"
            android:minLines="1"
            android:layout_column="1"

            android:layout_gravity="left"
            android:layout_row="2">

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/button_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:layout_column="2"
            android:layout_gravity="left"
            android:layout_row="2" />

        <EditText
            android:id="@+id/edit_text_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:ems="10"
            android:maxLines="1"
            android:minLines="1"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEND &lt;your message>"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_row="4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On Melody Terminal type:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center_horizontal"
            android:layout_row="4" />

        <android.widget.Space
            android:layout_width="21dp"
            android:layout_height="1dp"
            android:layout_column="0"
            android:layout_row="0" />

        <android.widget.Space
            android:layout_width="1dp"
            android:layout_height="21dp"
            android:layout_column="0"
            android:layout_row="0" />

        <android.widget.Space
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_column="0"
            android:layout_row="1" />

        <android.widget.Space
            android:layout_width="1dp"
            android:layout_height="82dp"
            android:layout_column="0"
            android:layout_row="2" />

        <android.widget.Space
            android:layout_width="1dp"
            android:layout_height="58dp"
            android:layout_column="0"
            android:layout_row="3" />

        <android.widget.Space
            android:layout_width="220dp"
            android:layout_height="1dp"
            android:layout_column="1"
            android:layout_row="0" />
    </android.widget.GridLayout>

    <android.widget.Space
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_column="2"
        android:layout_row="0" />

    <android.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_column="4"
        android:layout_row="0" />

    <android.widget.Space
        android:layout_width="1dp"
        android:layout_height="284dp"
        android:layout_column="0"
        android:layout_row="4" />

</android.widget.GridLayout>
